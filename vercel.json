{
  "version": 2,
  "buildCommand": "cd backend && npm install",
  "public": "public",
  "functions": {
    "api/**/*.js": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "routes": [
    {
      "src": "/api/achievements/(.*)",
      "dest": "/api/achievements.js"
    },
    {
      "src": "/api/activities/(.*)",
      "dest": "/api/activities.js"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/public/$1"
    }
  ],
  "env": {
    "NODE_ENV": "production"
  }
}
